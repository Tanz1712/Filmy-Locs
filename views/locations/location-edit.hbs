{{! views/locations/location-edit.hbs }}

<h2>Edit the Location: {{location.name}}</h2>

<form
  action="/userProfile/locations/{{location._id}}/edit"
  method="post"
>

  <label>Name:</label>
  <input type="text" name="name" value="{{location.name}}" required />

  <label>Description:</label>
  <input type="text" name="description" value="{{location.description}}" required/>

 <!-- <label>Enter Cast/Casts (do not forget comma, if more than one): </label>
  <input name="cast" value="{{location.cast}}" required />-->





  <button>Save changes</button>
</form>

<h4>Movies:
  {{#each location.movies}}
  
    <h4>{{this.title}}</h4>
     <a href="/userProfile/movies/{{this._id}}/edit">Update</a>
    
  {{/each}}</h4>